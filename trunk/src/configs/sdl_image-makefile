all:libSDL_image.a

SOURCE := \
   IMG.c		IMG_jpg.c	IMG_png.c	IMG_tif.c	IMG_xv.c \
   IMG_bmp.c	IMG_lbm.c	IMG_pnm.c	IMG_xcf.c	IMG_xxx.c \
   IMG_gif.c	IMG_pcx.c	IMG_tga.c	IMG_xpm.c

OBJS := $(SOURCE:%.c=%.o)

libSDL_image.a: $(OBJS)
	ar -cr libSDL_image.a $(OBJS)

CONFIG := \
   -DLOAD_JPG \
   -DFAST_IS_JPEG \
   -DLOAD_PNG \
   -DLOAD_XPM \
   -DLOAD_TGA \
   -DLOAD_XV

%.o:%.c
	gcc -O2 $(CONFIG) -I../../include $< -c

clean:
	rm -f $(OBJS)
